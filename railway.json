{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python test_app.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "FFMPEG_BINARY": "/usr/bin/ffmpeg",
      "PATH": "/usr/bin:/bin:/usr/local/bin:$PATH"
    }
  }
} 